@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="10000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/plp1.png" alt="Welcome Image" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Prioviding playlists for your whole day!
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/plp2.png" alt="We have you covered!" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Click the button to open our "Office Time" playlist and start your day off right, or look below for more options.
                    <a class="btn btn-warning" href="https://open.spotify.com/user/playlistpro_mvc/playlist/2wmX4ScJcmbUwH1BbDBBLE">
                        Open Playlist
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row">
    <div class="buttoncontainer">
        <div class="col-md-3">
            <h2>Let's Get Started!</h2>
        </div>
        <div class="verticalLine">
            <ul>
                @Html.ActionLink("Learn More About This Project", "About", "Home", null, new { @class = "btn btn-warning btn-large" })
            </ul>
            <ul>
                @Html.ActionLink("Check Out Available Playlists!", "Playlists", "Home", null, new { @class = "btn btn-warning btn-large" })
            </ul>
        </div>
    </div>
</div>
